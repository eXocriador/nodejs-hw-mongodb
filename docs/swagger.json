{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Contacts API",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "API для управління контактами з підтримкою авторизації та Google OAuth.\nДозволяє створювати, читати, оновлювати та видаляти контакти.\n"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    },
    {
      "url": "https://goit.exocriador.art",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Операції авторизації та аутентифікації"
    },
    {
      "name": "Contacts",
      "description": "Операції з контактами"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Реєстрація користувача",
        "description": "Створює нового користувача",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "password"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Ім'я користувача"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email користувача"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "Пароль користувача"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Користувача створено",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully registered a user!"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Невалідні дані",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "status": 400,
                  "message": "Field 'email' is required",
                  "data": null
                }
              }
            }
          },
          "409": {
            "description": "Email вже використовується",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "status": 409,
                  "message": "Email already in use",
                  "data": null
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Вхід в систему",
        "description": "Авторизує користувача та повертає токени",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email користувача"
                  },
                  "password": {
                    "type": "string",
                    "format": "password",
                    "description": "Пароль користувача"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успішний вхід",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "schema": {
                  "type": "string",
                  "description": "Cookie з refresh токеном"
                }
              }
            }
          },
          "400": {
            "description": "Невалідні дані",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Неправильний email або пароль",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/google": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Отримати URL для Google OAuth",
        "description": "Повертає URL для авторизації через Google OAuth",
        "operationId": "getGoogleAuthUrl",
        "responses": {
          "200": {
            "description": "URL для Google OAuth",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "url": {
                      "type": "string",
                      "description": "URL для авторизації через Google"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Google OAuth авторизація",
        "description": "Авторизує користувача через Google OAuth",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "token"
                ],
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "Google OAuth токен"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успішна авторизація",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "schema": {
                  "type": "string",
                  "description": "Cookie з refresh токеном"
                }
              }
            }
          },
          "401": {
            "description": "Помилка авторизації",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Оновлення токену",
        "description": "Оновлює access token за допомогою refresh token",
        "responses": {
          "200": {
            "description": "Токен оновлено",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            },
            "headers": {
              "Set-Cookie": {
                "schema": {
                  "type": "string",
                  "description": "Cookie з новим refresh токеном"
                }
              }
            }
          },
          "401": {
            "description": "Невалідний або прострочений refresh token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Вихід з системи",
        "description": "Видаляє сесію користувача",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Успішний вихід"
          },
          "401": {
            "description": "Не авторизований",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/contacts": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Отримати список контактів",
        "description": "Повертає список контактів користувача з можливістю пагінації, фільтрації та сортування.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Номер сторінки"
          },
          {
            "in": "query",
            "name": "perPage",
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "Кількість контактів на сторінці"
          },
          {
            "in": "query",
            "name": "isFavourite",
            "schema": {
              "type": "boolean"
            },
            "description": "Фільтр за улюбленими контактами (true/false)"
          },
          {
            "in": "query",
            "name": "contactType",
            "schema": {
              "type": "string",
              "enum": [
                "personal",
                "work",
                "other"
              ]
            },
            "description": "Фільтр за типом контакту"
          },
          {
            "in": "query",
            "name": "sortBy",
            "schema": {
              "type": "string",
              "enum": [
                "_id",
                "name",
                "email",
                "phoneNumber",
                "isFavourite",
                "createdAt"
              ],
              "default": "createdAt"
            },
            "description": "Поле для сортування"
          },
          {
            "in": "query",
            "name": "sortOrder",
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ],
              "default": "asc"
            },
            "description": "Порядок сортування"
          }
        ],
        "responses": {
          "200": {
            "description": "Список контактів",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found contacts!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Contact"
                          }
                        },
                        "page": {
                          "type": "integer",
                          "description": "Поточна сторінка"
                        },
                        "perPage": {
                          "type": "integer",
                          "description": "Кількість контактів на сторінці"
                        },
                        "totalItems": {
                          "type": "integer",
                          "description": "Загальна кількість контактів"
                        },
                        "totalPages": {
                          "type": "integer",
                          "description": "Загальна кількість сторінок"
                        },
                        "hasPreviousPage": {
                          "type": "boolean",
                          "description": "Чи є попередня сторінка"
                        },
                        "hasNextPage": {
                          "type": "boolean",
                          "description": "Чи є наступна сторінка"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Не авторизований",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Створити контакт",
        "description": "Створює новий контакт",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "phoneNumber",
                  "contactType"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Ім'я контакту",
                    "minLength": 3,
                    "maxLength": 20
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email контакту"
                  },
                  "phoneNumber": {
                    "type": "string",
                    "description": "Номер телефону контакту",
                    "minLength": 3,
                    "maxLength": 20
                  },
                  "isFavourite": {
                    "type": "boolean",
                    "default": false,
                    "description": "Чи є контакт улюбленим"
                  },
                  "contactType": {
                    "type": "string",
                    "enum": [
                      "personal",
                      "work",
                      "other"
                    ],
                    "description": "Тип контакту"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Контакт створено",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully created a contact!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Contact"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Невалідні дані",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Не авторизований",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "parameters": [
        {
          "in": "path",
          "name": "contactId",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "ID контакту"
        }
      ],
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Отримати контакт за ID",
        "description": "Повертає контакт за його ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Контакт знайдено",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found contact with id {contactId}!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Contact"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Не авторизований",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Контакт не знайдено",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "Contacts"
        ],
        "summary": "Оновити контакт",
        "description": "Оновлює існуючий контакт",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 20
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "phoneNumber": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 20
                  },
                  "isFavourite": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Контакт оновлено",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully patched a contact!"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Contact"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Невалідні дані",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Не авторизований",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Контакт не знайдено",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Видалити контакт",
        "description": "Видаляє контакт за його ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Контакт видалено"
          },
          "401": {
            "description": "Не авторизований",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Контакт не знайдено",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Contact": {
        "type": "object",
        "required": [
          "name",
          "email",
          "phoneNumber",
          "owner",
          "contactType"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Унікальний ідентифікатор контакту"
          },
          "name": {
            "type": "string",
            "description": "Ім'я контакту"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email контакту"
          },
          "phoneNumber": {
            "type": "string",
            "description": "Номер телефону контакту"
          },
          "isFavourite": {
            "type": "boolean",
            "default": false,
            "description": "Чи є контакт улюбленим"
          },
          "contactType": {
            "type": "string",
            "enum": [
              "personal",
              "work",
              "other"
            ],
            "description": "Тип контакту"
          },
          "photo": {
            "type": "string",
            "description": "URL фотографії контакту"
          },
          "owner": {
            "type": "string",
            "description": "ID власника контакту"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Дата створення контакту"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Дата останнього оновлення контакту"
          }
        }
      },
      "User": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "description": "Унікальний ідентифікатор користувача"
          },
          "name": {
            "type": "string",
            "description": "Ім'я користувача"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email користувача"
          },
          "password": {
            "type": "string",
            "description": "Хеш паролю"
          },
          "subscription": {
            "type": "string",
            "enum": [
              "starter",
              "pro",
              "business"
            ],
            "default": "starter",
            "description": "Тип підписки"
          },
          "avatarURL": {
            "type": "string",
            "description": "URL аватара"
          },
          "verify": {
            "type": "boolean",
            "default": false,
            "description": "Чи верифікований email"
          },
          "verificationToken": {
            "type": "string",
            "description": "Токен для верифікації email"
          },
          "passwordResetToken": {
            "type": "string",
            "description": "Токен для скидання паролю"
          },
          "passwordResetExpires": {
            "type": "string",
            "format": "date-time",
            "description": "Термін дії токену скидання паролю"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "message": {
            "type": "string",
            "description": "Повідомлення про помилку"
          },
          "status": {
            "type": "integer",
            "description": "HTTP статус код"
          },
          "data": {
            "type": "object",
            "description": "Додаткові дані про помилку"
          }
        }
      },
      "AuthResponse": {
        "type": "object",
        "required": [
          "status",
          "message",
          "data"
        ],
        "properties": {
          "status": {
            "type": "integer",
            "example": 200
          },
          "message": {
            "type": "string",
            "example": "Successfully authenticated!"
          },
          "data": {
            "type": "object",
            "properties": {
              "accessToken": {
                "type": "string",
                "description": "JWT токен доступу"
              }
            }
          }
        }
      }
    }
  }
}